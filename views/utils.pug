mixin errorBlock(errors)
    if errors
        ul#errors
            each error in errors
                li= error

mixin questionForm(action)
    form#question-form(action=action , method="post")
        div#div-question-form
            input(type="hidden" name="_csrf" value=csrfToken)
            label(for="title") Title:
            input(type="text" name="title" id="title" required value=question.title)
            label(for="description") Description:
            textarea(name="description" id="description" rows="3" required)= question.description
            div
                button(type="submit" id="submit-question-form") Submit
                a(href=`/` id="cencel-btn-edit-q") Cancel

mixin authorAvatar(avatarUrl, username)
    if avatarUrl
        .author-avatar: img.avatar(src=avatarUrl, alt=username)
    else
        .author-avatar: img.avatar.default-avatar(src="/icons/user-circle-regular.svg", alt=username)

